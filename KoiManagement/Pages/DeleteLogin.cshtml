@page
@model KoiManagement.WebApplication.Pages.DeleteLogins

@{
    ViewData["Title"] = "Delete Account";
}

<h1 class="text-center my-4">Delete Account</h1>

<div class="container">
    <h3 class="text-center text-danger">Are you sure you want to delete this account?</h3>
    <div class="card my-4">
        <div class="card-header">
            <h4 class="mb-0">Login Account Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LoginAccount.name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LoginAccount.name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LoginAccount.username)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LoginAccount.username)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LoginAccount.password)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LoginAccount.password)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LoginAccount.address)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LoginAccount.address)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LoginAccount.birthday)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LoginAccount.birthday)
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="text-center">
        <input type="hidden" asp-for="LoginAccount.Id" />
        <button asp-page="/Login"  type="submit" class="btn btn-danger btn-lg">Delete Account</button>
        <div class="mt-3">
            <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}