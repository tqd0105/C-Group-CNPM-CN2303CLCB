<style>
    .booking-section {
        padding: 2rem;
        border-radius: 10px;
    }

    .booking-title {
        font-size: 2.5rem;
        color: #007acc;
        margin-bottom: 0.5rem;
    }

    .booking-description {
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        border: 1px solid #007acc;
        border-radius: 5px;
    }

    .button-bookingForm {
        background-color: #fff;
        color: #ff5722;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-size: 1.1rem;
        cursor: pointer;
        border: 2px solid #ff5722;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .button-bookingForm:hover {
            background-color: #ff5722;
            color: #fff;
        }

    .koi-fish-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<body>

    <!-- bradcam_area_start -->
    <div class="bradcam_area breadcam_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bradcam_text text-center">
                        <h3>schedule</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- bradcam_area_end -->
    <!-- ================ contact section start ================= -->
    <section class="booking-section mt-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="booking-title">Book a Health Checkup for Your Koi Fish</h2>
                    <p class="booking-description">Ensure the health and vitality of your koi fish with a professional examination</p>
                </div>
                <div class="col-lg-8">
                    <form class="form-booking booking_form" action="booking_process.php" method="post" id="bookingForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control valid" name="owner_name" id="owner_name" type="text" placeholder="Full Name">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control valid" name="contact_number" id="contact_number" type="text" placeholder="Contact Number">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control valid" name="email" id="email" type="email" placeholder="Email Address">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="koi_name" id="koi_name" type="text" placeholder="Koi Fish Name">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="appointment_date" id="appointment_date" type="date" placeholder="Appointment Date">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <select class="form-control" name="doctor" id="doctor">
                                        <option value="" disabled selected>Select a Doctor</option>
                                        <option value="doctor1">Dr. Lam</option>
                                        <option value="doctor2">Dr. Dung</option>
                                        <option value="doctor3">Dr. Hieu</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea class="form-control w-100" name="symptoms" id="symptoms" cols="30" rows="5" placeholder="Describe any symptoms or concerns"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control" name="address" id="address" type="text" placeholder="Home visit address (if needed)">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-3 text-center">
                            <a href="/Thanks" type="submit" class="button button-bookingForm boxed-btn">Book Appointment</a>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-home"></i></span>
                        <div class="media-body">
                            <h3>Koi Clinic</h3>
                            <p>Vo Oanh Binh Thanh, Ho Chi Minh City</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                        <div class="media-body">
                            <h3>+84 123 456 789</h3>
                            <p>Mon - Fri, 8 AM - 5 PM</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-email"></i></span>
                        <div class="media-body">
                            <h3>support@koiclinic.vn</h3>
                            <p>We're here to help!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ================ Schedule section start ================= -->
    <section class="schedule-section">
        <div class="container">
            <h2 class="section-title text-center">Doctor's Schedule</h2>
            <div class="row">
                <div class="col-lg-6">
                    <!-- Doctor's working hours form -->
                    <h4>Set Doctor's Working Hours</h4>
                    <form action="/update-schedule" method="post">
                        <div class="form-group">
                            <label for="doctor-name">Doctor's Name</label>
                            <input class="form-control" id="doctor-name" name="doctor-name" type="text" placeholder="Enter Doctor's Name">
                        </div>

                        <div class="form-group">
                            <label for="work-day">Work Day</label>
                            <input class="form-control" id="datepicker" name="work-day" type="text" placeholder="Select Day">
                        </div>

                        <div class="form-group">
                            <label for="work-time">Work Time</label>
                            <input class="form-control" id="timepicker" name="work-time" type="text" placeholder="Select Time">
                        </div>

                        <button type="submit" class="btn btn-primary">Save Schedule</button>
                    </form>
                </div>

                <div class="col-lg-6" style="float:left">
                    <!-- Center's schedule -->
                    <h4>Center's Schedule</h4>
                    <ul>
                        <li><strong>Monday - Friday:</strong> 9:00 AM - 6:00 PM</li>
                        <li><strong>Saturday:</strong> 9:00 AM - 2:00 PM</li>
                        <li><strong>Sunday:</strong> Closed</li>
                    </ul>
                    <p>For more details or to book an appointment, please contact us.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ Schedule section end ================= -->
