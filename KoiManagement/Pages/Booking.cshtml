@page "/Booking"
@model KoiManagement.WebApplication.Pages.Booking
@{
}

<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Booking</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="img/banner/WebLogo.jpg">
    <!-- Place favicon.ico in the root directory -->
    <!-- CSS here -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/magnific-popup.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <link rel="stylesheet" href="css/nice-select.css">
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/gijgo.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/slicknav.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- <link rel="stylesheet" href="css/responsive.css"> -->
</head>
<style>
    .booking-section {
        padding: 2rem;
        border-radius: 10px;
    }

    .booking-title {
        font-size: 2.5rem;
        color: #007acc;
        margin-bottom: 0.5rem;
    }

    .booking-description {
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        border: 1px solid #007acc;
        border-radius: 5px;
    }

    .button-bookingForm {
        background-color: #fff;
        color: #ff5722;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-size: 1.1rem;
        cursor: pointer;
        border: 2px solid #ff5722;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .button-bookingForm:hover {
            background-color: #ff5722;
            color: #fff;
        }

    .koi-fish-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<body>

    <!-- bradcam_area_start -->
    <div class="bradcam_area breadcam_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bradcam_text text-center">
                        <h3>schedule</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- bradcam_area_end -->
    <!-- ================ contact section start ================= -->
    <section class="booking-section mt-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="booking-title">Book a Health Checkup for Your Koi Fish</h2>
                    <p class="booking-description">Ensure the health and vitality of your koi fish with a professional examination</p>
                </div>
                <div class="col-lg-8">
                    <form class="form-booking booking_form"  method="post" >
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                        <label asp-for="BookingSchedule.name" class="form-label"></label>
                                    <input asp-for="BookingSchedule.name" class="form-control" placeholder="Enter your name" />
                                    <span asp-validation-for="BookingSchedule.name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.phone" class="form-label"></label>
                                    <input asp-for="BookingSchedule.phone" class="form-control" placeholder="Enter your phone number" />
                                    <span asp-validation-for="BookingSchedule.phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.email" class="form-label"></label>
                                    <input asp-for="BookingSchedule.email" class="form-control" placeholder="Enter your email" />
                                    <span asp-validation-for="BookingSchedule.email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.koi_name" class="form-label"></label>
                                    <input asp-for="BookingSchedule.koi_name" class="form-control" placeholder="Enter your Koi's Name" />
                                    <span asp-validation-for="BookingSchedule.koi_name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.Booking_Date" class="form-label"></label>
                                    <input asp-for="BookingSchedule.Booking_Date" class="form-control" placeholder="Enter Booking Date" />
                                    <span asp-validation-for="BookingSchedule.Booking_Date" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.vets_name" class="form-label"></label>
                                    <select asp-for="BookingSchedule.vets_name" class="form-control">
                                        <option value="">Select a Vet</option>
                                        <option value="Dr. Dung">Dr. Dung</option>
                                        <option value="Dr. Lam">Dr. Lam</option>
                                        <option value="Dr. Han">Dr. Han</option>
                                        <option value="Dr. Hieu">Dr. Hieu</option>
                                        <option value="Dr. Khang">Dr. Khang</option>
                                    </select>
                                    <span asp-validation-for="BookingSchedule.vets_name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.address" class="form-label"></label>
                                    <input asp-for="BookingSchedule.address" class="form-control" placeholder="Enter your address"/>
                                    <span asp-validation-for="BookingSchedule.address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="BookingSchedule.description" class="form-label"></label>
                                    <textarea asp-for="BookingSchedule.description" class="form-control" placeholder="Enter your description about problem of Koi" ></textarea>
                                    <span asp-validation-for="BookingSchedule.description" class="text-danger"></span>
                                </div>
                            </div>
                           
                        </div>
                        <div class="form-group mt-3 text-center">
                            <input type="submit" value="Booking Consultation" class="button button-bookingForm boxed-btn"/>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-home"></i></span>
                        <div class="media-body">
                            <h3>Koi Clinic</h3>
                            <p>Vo Oanh Binh Thanh, Ho Chi Minh City</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                        <div class="media-body">
                            <h3>+84 123 456 789</h3>
                            <p>Mon - Fri, 8 AM - 5 PM</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-email"></i></span>
                        <div class="media-body">
                            <h3>support@koiclinic.vn</h3>
                            <p>We're here to help!</p>
                        </div>
                    </div>
                    <a href="Appoint/Index" style="white-space: nowrap; border: 1px solid orange;" class="boxed-btn4">Booking Appointment</a>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ contact section end ================= -->
    <!-- JS here -->
    <script src="js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/isotope.pkgd.min.js"></script>
    <script src="js/ajax-form.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/jquery.counterup.min.js"></script>
    <script src="js/imagesloaded.pkgd.min.js"></script>
    <script src="js/scrollIt.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
    <script src="js/wow.min.js"></script>
    <script src="js/nice-select.min.js"></script>
    <script src="js/jquery.slicknav.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/gijgo.min.js"></script>

    <!--contact js-->
    <script src="js/contact.js"></script>
    <script src="js/jquery.ajaxchimp.min.js"></script>
    <script src="js/jquery.form.js"></script>
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/mail-script.js"></script>

    <script src="js/main.js"></script>
    <script>
        $('#datepicker').datepicker({
            iconsLibrary: 'fontawesome',
            disableDaysOfWeek: [0, 0],
            //     icons: {
            //      rightIcon: '<span class="fa fa-caret-down"></span>'
            //  }
        });
        $('#datepicker2').datepicker({
            iconsLibrary: 'fontawesome',
            icons: {
                rightIcon: '<span class="fa fa-caret-down"></span>'
            }

        });
        var timepicker = $('#timepicker').timepicker({
            format: 'HH.MM'
        });
    </script>
</body>

</html>

