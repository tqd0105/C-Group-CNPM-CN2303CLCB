@page
@model KoiManagement.WebApplication.Pages.Appoint.DetailsModel

@{
    ViewData["Title"] = "Appointment Details";
}

<h1>Appointment Details</h1>

<div>
    <h4>Appointment Information</h4>
    <hr />
    <dl class="row">
        <!-- Customer ID -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.CustomerId)
        </dd>

        <!-- Vet ID -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.VetId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.VetId)
        </dd>

        <!-- Appointment Date -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")
        </dd>

        <!-- Status -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Status)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Appointment.AppointmentId" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
