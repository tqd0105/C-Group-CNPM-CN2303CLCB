@page "/TreatmentScheduleEdit"
@model KoiManagement.WebApplication.Pages.TreatmentScheduleEditModel
@{
    ViewData["Title"] = "Edit Treatment Schedule";
}

<!doctype html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">

    <style>
        .edit-section {
            padding: 2rem;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-top: 2rem;
        }

        .edit-title {
            font-size: 2.5rem;
            color: orangered;
            text-align: center;
            margin-bottom: 1rem;
        }

        .form-group label {
            color: #333;
        }

        .form-group input,
        .form-group select {
            border: 1px solid orangered;
            border-radius: 5px;
        }

        .button-save {
            background-color: #fff;
            color: orangered;
            padding: 0.75rem 2rem;
            border-radius: 30px;
            font-size: 1.1rem;
            cursor: pointer;
            border: 2px solid orangered;
            transition: background-color 0.3s ease, color 0.3s ease;
            display: block;
            margin: 0 auto;
        }

            .button-save:hover {
                background-color: orangered;
                color: #fff;
            }

        #datepicker {
            display: inline-block;
            width: 100%; /* Chiếm toàn bộ chiều rộng của ô */
            padding: 0.375rem 0.75rem;
            border-radius: 5px;
            border: 1px solid orangered;
        }

    </style>
</head>

<body>

    <!-- Header Section -->
    <div class="bradcam_area breadcam_bg py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="text-white">@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section for Editing -->
    <section class="edit-section mt-5">
        <div class="container">
            <h1 class="edit-title">Edit Treatment Schedule</h1>
            <form method="post">
                <input type="hidden" asp-for="TreatmentSchedule.Id" />

                <div class="row">
                    <!-- Customer Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TreatmentSchedule.CustomerName">Customer Name</label>
                            <input asp-for="TreatmentSchedule.CustomerName" class="form-control" placeholder="Enter Customer Name" />
                            <span asp-validation-for="TreatmentSchedule.CustomerName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Koi Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TreatmentSchedule.KoiName">Koi's Name</label>
                            <input asp-for="TreatmentSchedule.KoiName" class="form-control" placeholder="Enter Koi's Name" />
                            <span asp-validation-for="TreatmentSchedule.KoiName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Disease Symptoms -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TreatmentSchedule.DiseaseSymptoms">Disease Symptoms</label>
                            <input asp-for="TreatmentSchedule.DiseaseSymptoms" class="form-control" placeholder="Enter Symptoms" />
                            <span asp-validation-for="TreatmentSchedule.DiseaseSymptoms" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Appointment Date -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TreatmentSchedule.AppointmentDate">Appointment Date</label>
                            <input asp-for="TreatmentSchedule.AppointmentDate" type="date" class="form-control" id="datepicker" />
                            <span asp-validation-for="TreatmentSchedule.AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="button-save">Save Changes</button>
                </div>
            </form>
        </div>
    </section>

    <!-- JS here -->
    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>

    <script>
        $(document).ready(function () {
            $('#datepicker').datepicker({
                format: 'yyyy-mm-dd', // Date format
                autoclose: true,      // Close after selection
                todayHighlight: true, // Highlight today
                iconsLibrary: 'fontawesome',
                icons: {
                    rightIcon: '<span class="fa fa-calendar"></span>'
                }
            });
        });
    </script>

</body>
</html>
