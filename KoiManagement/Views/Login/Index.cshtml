<form style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4 w-50">
        <input type="email" id="form2Example1" class="form-control" />
        <label class="form-label" for="form2Example1">Email address</label>
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4 w-50">
        <input type="password" id="form2Example2" class="form-control" />
        <label class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4 w-50">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31">Remember me</label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="#!" style="white-space: nowrap;">Forgot password?</a>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4 w-50">Sign in</button>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a href="#!">Register</a></p>
        <p>or sign up with:</p>
       <a href="/Account/SignInWithGoogle">
                                            <i  class="fa fa-google-plus"></i>
                                            </a>



    </div>
</form>
